{
  "compilerOptions": {
    /* Target modern JS output */
    "target": "ES2021",
    "lib": ["ES2021"],

    /* âœ… Use modern Node ESM-aware module system */
    "module": "Node16",
    "moduleResolution": "Node16",

    "rootDir": "./src",
    "outDir": "./dist",

    /* Interop & quality */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": [
    "node_modules",
    "angular",
    "../front-end",
    "../front-end/tsconfig.json",
    "../front-end/tsconfig.app.json",
    "../front-end/tsconfig.spec.json",
    "../front-end/angular.json"
  ]
}
